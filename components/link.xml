
<krpano>      
    <include url="%VIEWER%/plugins/showtext.xml" />
    <plugin name="c2c" 
        url="%CURRENTXML%/plugins/copy2clipboard.js" 
        keep="true"
        devices="html5"
        />

<textstyle name="message"
           origin="cursor"
           edge="bottom"
           xoffset="0"
           yoffset="-30"
           fadeintime="0.0"
           showtime="0.5"
           fadetime="0.3"
           font="Arial"
           fontsize="20.0"
           bold="true"
           italic="false"
           textcolor="0xFFFFFF"
           textalign="none"
           padding="2"
           css=""
           width=""
           height=""
           vcenter=""
           background="true"
           backgroundcolor="0xFFFFFF"
           backgroundalpha="0.0"
           border="true"
           bordercolor="0x000000"
           borderalpha="1.0"
           borderwidth="1.0"
           roundedge="0"
           shadow="0.0"
           shadowrange="4.0"
           shadowangle="45"
           shadowcolor="0x000000"
           shadowalpha="1.0"
           textshadow="0.0"
           textshadowrange="4.0"
           textshadowangle="45"
           textshadowcolor="0x000000"
           textshadowalpha="1.0"
           alpha="1.0"
           parent=""
           noclip="true"
           />

    <action name="copy_to_clipboard">
        plugin[c2c].copy2clipboard(get(browser.location));
        showtext("Link Copied", message);
    </action>     

</krpano>